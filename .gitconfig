# MY GLOBAL GIT CONFIG

[user]
  name = Sascha Bilert
  email = sascha.bilert@student.jade-hs.de
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[web]
  browser = google-chrome
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[diff]
  tool = vimdiff
[alias]
  co = checkout
  pa = pull --all
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d[%an]\" --graph --date=short
  cleanup = fetch -p origin
[branch]
	autosetupmerge = always
